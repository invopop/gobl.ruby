{
  "$schema": "http://json-schema.org/draft/2020-12/schema",
  "$id": "https://gobl.org/draft-0/org/tax-id",
  "$ref": "#/$defs/TaxID",
  "$defs": {
    "TaxID": {
      "properties": {
        "uuid": {
          "$ref": "https://gobl.org/draft-0/uuid/uuid",
          "title": "UUID",
          "description": "Unique universal identity code"
        },
        "country": {
          "type": "string",
          "title": "Country Code",
          "description": "ISO country code for Where the tax identity was issued"
        },
        "code": {
          "type": "string",
          "title": "Code",
          "description": "Identity Code"
        },
        "meta": {
          "patternProperties": {
            ".*": {
              "type": "string"
            }
          },
          "type": "object",
          "title": "Meta",
          "description": "Additional details."
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "country",
        "code"
      ],
      "description": "TaxID represents a party's tax identify number for a given country."
    }
  }
}